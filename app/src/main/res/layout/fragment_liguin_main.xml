<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/tools"
    xmlns:app1="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:padding="16dp"
    android:gravity="center"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/black"
    app:ignore="NamespaceTypo">

    <TextView
        android:id="@+id/petReaction"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="16dp"
        android:text="I LOVE LINUX OMG>>>>>>>>>>>>"
        android:textSize="18sp"
        android:textColor="#00FF00"
        android:ellipsize="marquee"
        android:marqueeRepeatLimit="marquee_forever"
        android:singleLine="true"
        android:focusable="true"
        android:focusableInTouchMode="true"
        android:scrollHorizontally="true"
        android:visibility="gone" />


รท

    <app.rive.runtime.kotlin.RiveAnimationView
        android:id="@+id/riveanim"
        android:layout_width="match_parent"
        android:layout_height="300dp"
        app1:riveResource="@raw/linguin"
        />


    <LinearLayout
        android:layout_marginTop="30dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="169dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:background="@drawable/happylinguin"
            />

        <TextView
            android:id="@+id/happinessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text=" : 0"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="169dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:background="@drawable/hungerlinguin"
            />

        <TextView
            android:id="@+id/hungerText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text=" : 0"
            android:textSize="32sp" />

    </LinearLayout>

    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="169dp"
            android:layout_height="32dp"
            android:layout_gravity="center_vertical"
            android:layout_marginStart="60dp"
            android:background="@drawable/sadnesslinguin"
            />

        <TextView
            android:id="@+id/sadnessText"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="0dp"
            android:text=" : 0"
            android:textSize="32sp" />

    </LinearLayout>

    <com.google.android.material.button.MaterialButton
        android:id="@+id/talkToLinguinBtn"
        android:layout_width="wrap_content"
        android:layout_height="47dp"
        android:layout_gravity="center"
        android:layout_marginTop="50dp"
        android:text="Talk to Linguin"
        android:backgroundTint="@null"
        android:textColor="@color/red"
        android:background="@drawable/linguinbuttonrec"
        app:backgroundTint="@null" />


</LinearLayout>
